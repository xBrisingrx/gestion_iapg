<h1>Categorías de empresas</h1>
<div class="row justify-content-between mb-2">
  <div class="col-4">
    <%= link_to "Registrar categoría", 
      new_company_category_path,
      data: { turbo_frame: "modal"},
      class: "btn btn-sm btn-primary" %>
  </div>
  <div class="col-6">
    <%= form_with url: company_categories_path, method: :get, data: { controller: "filter", filter_target: "form", turbo_frame: "table" } do |form| %>
      <%= form.search_field :query,
          placeholder: "Filtrar",
          class: "form-control form-control-sm",
          autocomplete: "off",
          data: { action: "input->filter#search" }
        %>
    <% end %>
  </div>
</div>
<%= turbo_frame_tag 'table', id: 'company_categories_table' do %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>Nombre</th>
          <th>Cupos</th>
          <th>Descripción</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id='tbody_company_categories'>
        <%= render(partial: "shared/not_found_data", locals: {colspan: 4}) if @company_categories.empty?%>
        <%= render @company_categories %>
      </tbody>
    </table>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
